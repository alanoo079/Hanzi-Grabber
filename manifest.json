{
  "name": "Hanzi Helper",
  "description": "A little Chrome extension that collects, converts, and helps you learn Chinese characters on any webpage for a easier Hanzi learning experience! <3",
  "version": "1.2",
  "manifest_version": 3,
  "homepage_url": "https://github.com/alanoo079/Hanzi-Grabber",
  "action": {
    "default_popup": "GUI/index.html"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "clipboardWrite",
    "storage"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png",
    "512": "icons/hanzi.png"
  }
}